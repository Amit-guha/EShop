<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.MainActivity">


<!--Adding Toolbar-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <!--scrollview-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#141A32">



            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#1E2747"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        app:lottie_rawRes="@raw/welcome"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>


                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Name"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <!--Ratingbar-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp">


                        <RatingBar
                            android:id="@+id/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_gravity="center_horizontal"
                            android:max="5"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:layout_marginTop="5dp"
                            android:theme="@style/RatingBar" />

                    </LinearLayout>


                    <!--opening , clsoing time-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="6">

                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/timeicon"/>

                        <TextView
                            android:layout_weight="1.4"
                            android:id="@+id/tv_opening"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="3dp"
                            android:text="Opening"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_weight="2.1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            />


                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_gravity="right"
                            android:layout_height="wrap_content"
                            android:src="@drawable/timeicon"/>

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tv_closing"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:text="Closing"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>






                </LinearLayout>



            </androidx.cardview.widget.CardView>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_item"
                android:layout_width="match_parent"
                tools:listitem="@layout/layout_products"
                android:layout_height="450dp"/>

            <TextView
                android:id="@+id/tv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnnext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="submit"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>